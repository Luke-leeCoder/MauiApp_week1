<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiApp_week1.Views.MainViewA"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowDefinitions="*,*" RowSpacing="20">
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Style="{StaticResource TitleLable}" Text="내 주소" />
            <Label
                HorizontalOptions="Start"
                Style="{DynamicResource MiddleLable}"
                Text="서울 강남구 강남대로 396 강남역 지하 1층"
                WidthRequest="165" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" Spacing="5">
            <Label Style="{DynamicResource TitleLable}" Text="반려동물" />
            <Label Style="{DynamicResource MiddleLable}" Text="없음" />
        </VerticalStackLayout>
    </Grid>
</ContentView>
