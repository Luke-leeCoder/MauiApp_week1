<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiApp_week1.Views.MainViewB"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowDefinitions="*,*,*" RowSpacing="3">
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLable}"
            Text="결제 정보" />
        <FlexLayout
            Grid.Row="1"
            Direction="Row"
            JustifyContent="SpaceBetween">
            <Label Style="{StaticResource MiddleLable}" Text="결제 예정 금액" />
            <Label
                HorizontalTextAlignment="End"
                Style="{StaticResource MiddleLable}"
                Text="31,200원" />
        </FlexLayout>
        <Label
            Grid.Row="2"
            Text="결제는 서비스가 완료된 후 진행됩니다."
            TextColor="#BBBFC2" />
    </Grid>
</ContentView>
